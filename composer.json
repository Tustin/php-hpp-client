{
  "name": "maxpay/hpp-client",
  "description": "Maxpay PHP Library",
  "keywords": [
    "maxpay",
    "psp"
  ],
  "homepage": "https://maxpay.com/",
  "license": "MIT",
  "authors": [
    {
      "name": "Maxpay team",
      "homepage": "https://github.com/maxpay"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-iconv": "*",
    "ext-mbstring": "*",
    "psr/log": "*",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "1.5.3",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Maxpay\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0-dev"
    }
  }
}
